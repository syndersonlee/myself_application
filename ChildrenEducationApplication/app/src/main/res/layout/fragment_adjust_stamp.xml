<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/rb97nk8tv0pw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E3E3E3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/r18j8p22ifhs"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="horizontal">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/button_checklist_sub_menu_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/cr20bafe2ff"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/ryc8qrv0izgr"
                                android:layout_width="30dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"
                                android:src="@drawable/stamp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="11dp"
                                android:gravity="center"
                                android:text="정확한 점검 스탬프 개수 조정"
                                android:textColor="#000000"
                                android:textSize="23sp"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="11dp"
                            android:gravity="center"
                            android:text="자기점검 연습을 시작할 때에는\n점검 잘했을 때 보상이 커야 효과적입니다.\n(기본 설정 : 1개)"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="11dp"
                                android:gravity="center"
                                android:text="정확한 점검! ="
                                android:textColor="#000000"
                                android:textSize="23sp"
                                android:textStyle="bold" />
                            <Spinner
                                android:id="@+id/stamp_number_count"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/cr20bffffff"
                                android:gravity="center"
                                android:spinnerMode="dropdown"
                                android:textAlignment="center"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="11dp"
                                android:gravity="center"
                                android:text="개"
                                android:textColor="#000000"
                                android:textSize="23sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/evaluation_save_button"
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:layout_gravity="right"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/cr20bffec8a"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="저장"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>